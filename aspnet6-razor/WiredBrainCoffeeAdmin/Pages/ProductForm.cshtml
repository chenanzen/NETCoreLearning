@using WiredBrainCoffeeAdmin.Data
@model Product

<form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All"></div>
    <div class="mb-3">
        <label asp-for="@Model.Name">Name</label>
        <input asp-for="@Model.Name" class="form-control" />
        <span asp-validation-for="@Model.Name"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.ShortDescription">Short Description</label>
        <input asp-for="@Model.ShortDescription" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Description">Description</label>
        <textarea asp-for="@Model.Description" class="form-control"></textarea>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Price">Price</label>
        <input asp-for="@Model.Price" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Category">Category</label>
        <select asp-for="@Model.Category" class="form-control">
            <option value="Beverage">Beverage</option>
            <option value="Food">Food</option>
        </select>
    </div>
    @if(ViewContext.RouteData.Values["id"] is not null)
    {
        <div class="mb-3">
            <label asp-for="@Model.ImageFile">Current Image</label>
            <input type="hidden" asp-for="@Model.ImageFile" class="form-control" />
            <img src="~/images/menu/@Model.ImageFile" />
        </div>   
    }

    <div class="mb-3">
        <label asp-for="@Model.Upload">Image</label>
        <input asp-for="@Model.Upload" class="form-control" />
    </div>

    @if (ViewContext.RouteData.Values["id"] is not null)
    {
        <button class="btn btn-success" asp-page-handler="edit">Edit</button>
        <button class="btn btn-danger float-end" asp-page-handler="delete">Delete</button>
    }
    else
    {
        <button class="btn btn-success">Add</button>
    }
</form>